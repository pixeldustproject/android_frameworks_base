<resources>
    <!-- Recents -->
    <color name="recents_empty_dark_color">#ff4d4d4d</color>
    <color name="recents_empty_light_color">#ffb3b3b3</color>

    <!-- Recents membar text color -->
    <color name="recents_membar_text_color">@android:color/white</color>

    <!-- Slim recent -->
    <color name="recent_background">#80000000</color>

    <!-- Card Color -->
    <color name="card_background">#ffffffff</color>
    <color name="card_background_header">#00ffffff</color>
    <color name="card_backgroundExpand">#00ffffff</color>

    <color name="card_text_color_header">#ff000000</color>

    <!-- Used by selector -->
    <color name="card_pressed">#7e3c3c3c</color>

    <!-- Battery colors -->
    <color name="batterymeter_frame_color">@color/light_mode_icon_color_dual_tone_background</color> <!-- statusbar battery frame color  -->
    <color name="batterymeter_frame_color_darkintensity">@color/dark_mode_icon_color_dual_tone_background</color> <!-- statusbar battery frame color on white statusbar  -->
    <color name="batterymeter_frame_color_tile">@color/light_mode_icon_color_dual_tone_background</color> <!-- tile battery frame color -->
    <color name="batterymeter_bolt_color">#FFFFFFFF</color> <!--  statusbar battery bolt and plus color on no circle styles -->
    <color name="batterymeter_circle_tile_bolt_plus_color">#FFFFFFFF</color> <!-- bolt and plus color for tile on circle battery style-->
    <color name="batterymeter_tile_bolt_plus_color">@color/system_primary_color</color> <!-- bolt and plus color for tile on non circle battery styles - the qs panel background color -->
    <color name="battery_charge_level_on_light_statusbar">@color/dark_mode_icon_color_dual_tone_fill</color> <!-- level color on white statusbar -->
    <color name="battery_charge_level_on_normal_statusbar">@color/light_mode_icon_color_dual_tone_fill</color> <!-- level color on normal statusbar -->
    <color name="battery_charge_level_low_level">#FFE53935</color> <!-- level color when <15 for statusbar battery -->
    <color name="battery_normal_charge_level_tile">#ffffff</color> <!-- level color when >15 for the tile battery -->
    <color name="battery_low_charge_level_tile">@color/battery_charge_level_low_level</color> <!-- level color when >15 for the tile battery -->
    <color name="status_bar_battery_level_text_color">#ffffff</color> <!-- percentage text outside battery icon -->

    <!-- Screen pinning layout -->
    <color name="screen_pinning_background_color">@*android:color/accent_device_default_light</color>
    <color name="screen_pinning_button_text">@android:color/white</color>
</resources>
